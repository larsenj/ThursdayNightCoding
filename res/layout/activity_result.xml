<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mathproblemconstructor.Result" >
    <TextView
        android:id="@+id/results"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/resultTitle"
        android:textColor="#0000ff"
        android:textSize="100sp" />
    <TextView
        android:id="@+id/letterGrade"
        android:layout_below="@id/results"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/red"
        android:textSize="100sp" />
    <TextView
        android:id="@+id/correctAnchor"
        android:layout_below="@id/letterGrade"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/resultCorrect"
        android:textSize="64sp" />
    <TextView
        android:id="@+id/correct"
        android:layout_below="@id/letterGrade"
        android:layout_toRightOf="@id/correctAnchor"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="64sp" />
    <TextView
        android:id="@+id/wrongAnchor"
        android:layout_below="@id/correctAnchor"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/resultIncorrect"
        android:textSize="64sp" />
    <TextView
        android:id="@+id/wrong"
        android:layout_below="@id/correctAnchor"
        android:layout_toRightOf="@id/wrongAnchor"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="64sp" />
    <TextView
        android:id="@+id/skippedAnchor"
        android:layout_below="@id/wrongAnchor"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/resultSkipped"
        android:textSize="64sp" />
    <TextView
        android:id="@+id/skipped"
        android:layout_below="@id/wrongAnchor"
        android:layout_toRightOf="@id/skippedAnchor"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="64sp" />
    <TextView
        android:id="@+id/timeAnchor"
        android:layout_below="@id/skippedAnchor"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/resultTime"
        android:textSize="64sp" />
    <TextView
        android:id="@+id/time"
        android:layout_below="@id/skippedAnchor"
        android:layout_toRightOf="@id/timeAnchor"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="64sp" />
</RelativeLayout>